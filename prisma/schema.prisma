generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── Enums ───

enum Role {
  user
  admin
  publisher
  suspended
  pending_publisher
}

// ─── Better Auth Tables ───

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Freedom-specific fields
  schoolId   String?
  gradeLevel Int?
  role       Role      @default(user)
  school     School?   @relation(fields: [schoolId], references: [id])

  sessions          Session[]
  accounts          Account[]
  publisherRequests PublisherRequest[]
  sheets            Sheet[]
  ratings           Rating[]
}

model PublisherRequest {
  id          String   @id @default(cuid())
  userId      String
  firstName   String
  lastName    String
  dateOfBirth DateTime
  tel         String
  status      String   @default("pending") // pending, approved, rejected
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// ─── Freedom-specific Tables ───

model School {
  id         String  @id @default(cuid())
  name       String
  province   String
  district   String
  schoolType String

  users User[]

  @@index([name])
}

// ─── Sheet Upload & Rating ───

model Sheet {
  id          String   @id @default(cuid())
  title       String
  description String?
  subject     String
  level       String
  examType    String
  term        String
  pdfUrl      String
  pdfKey      String
  uploadedBy  String
  uploader    User     @relation(fields: [uploadedBy], references: [id], onDelete: Cascade)
  ratings     Rating[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([level, examType, term])
  @@index([uploadedBy])
}

model Rating {
  id        String   @id @default(cuid())
  score     Int
  userId    String
  sheetId   String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sheet     Sheet    @relation(fields: [sheetId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, sheetId])
  @@index([sheetId])
}
